<form method="GET" action="/results">
  <p>
    Из<br>
    <input type="text" name="from_name" id="from" required="true" autofocus="true">
  </p>
  <p>
    В<br>
    <input type="text" name="to_name" id="to" required="true">
  </p>
  <p>
    <label><input type="radio" id="oneway_true" name="oneway" value="1" checked="checked"/>Туда</label>
    <label><input type="radio" id="oneway_false" name="oneway" value="2"/>Туда-обратно</label>
  </p>

  <p>
    Туда (формат: 29 дек)<br>
    <input type="text" name="when" id="when">
  </p>

  <p id="return_date_input">
    Обратно (формат: 1 янв)<br>
    <input type="text" class="date" name="return_date" id="return_date">
  </p>
  Пассажиры<br>
  <p>
    <p>
      Взрослые<br>
      <input type="number" min="1" max="9" name="adult_seats" value="1"/>
    </p>
    <p>
      Дети (до 12 лет)<br>
      <input type="number" min="0" max="8" name="children_seats" id="children_seats" value="0"/>
    </p>
    <p>
      Младенцы (до 2 лет, по одному на взрослого)<br>
      <input type="number" min="0" max="4" name="infant_seats" id="infant_seats" value="0"/>
    </p>
  </p>
  <p>
    Класс<br>
    <label><input type="radio" id="economy" name="klass" value="economy" checked="checked"/>Эконом</label>
    <label><input type="radio" id="buisiness" name="klass" value="business"/>Бизнес</label>
  </p>
  <input name="lang" id="lang" type="hidden" value="ru"/>
  <input type="submit">
</form>
